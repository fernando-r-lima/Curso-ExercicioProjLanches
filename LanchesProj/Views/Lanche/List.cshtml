<!--using já está no _ViewImports-->
@model IEnumerable<Lanche>

<div><h2>Todos os lanches</h2></div>

<div class="row">
    @foreach (var lanche in Model)
    {
        <div class="col-4 col-sm-4 col-md-4 col-lg-4">
            <div class="img-thumbnail">
                <img src="@lanche.ImagemUrl" alt="">
            </div>
            <div>
                <h3>@lanche.Preco.ToString("c")</h3>
                <h3>@lanche.Nome</h3>
                <p>@lanche.DescricaoCurta</p>
            </div>
        </div>
    }
</div>


